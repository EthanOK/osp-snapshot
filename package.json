{
  "name": "@open-social-protocol/snapshot-sdk",
  "version": "0.0.1",
  "description": "This is the snapshot sdk for OSP",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "author": "OSP",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/Keccak256-evg/opensocial/osp-snapshot.git"
  },
  "homepage": "https://gitlab.com/dengjizhang",
  "keywords": [
    "osp",
    "snapshot"
  ],
  "files": [
    "dist"
  ],
  "dependencies": {
    "@apollo/client": "^3.11.10",
    "@snapshot-labs/snapshot.js": "^0.12.28",
    "ipfs-http-client": "^53.0.1",
    "typedoc": "^0.26.11"
  },
  "devDependencies": {
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.9",
    "@types/node": "^22.9.0",
    "chai": "^4.5.0",
    "dotenv": "^16.4.5",
    "husky": "^9.1.7",
    "lint-staged": "^15.2.10",
    "mocha": "^10.8.2",
    "prettier": "^3.3.3",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.5",
    "typedoc": "^0.26.11",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "{src,tests}/**/*.{js,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "prepare": "husky install",
    "prettier": "prettier --write \"{src,tests}/**/*.{js,ts,tsx,json,css,md}\"",
    "build": "tsup ./src/index.ts --format esm,cjs --dts",
    "typedoc": "typedoc src/index.ts",
    "test:sign": "yarn run ts-mocha -p ./tsconfig.json -t 1000000 tests/01-sign.spec.ts",
    "test:graphql": "yarn run ts-mocha -p ./tsconfig.json -t 1000000 tests/02-graphql.spec.ts",
    "test:score": "yarn run ts-mocha -p ./tsconfig.json -t 1000000 tests/03-score.spec.ts"
  }
}
